<% content_for :modal_content do %>
<div id="form-placeholder"></div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h3>Listing User Relationships</h3>

    <table class="table">
      <thead>
        <tr>
          <th>Owning user</th>
          <th>Related user</th>
          <th>Relationship type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id='items-tbody'>
        <%= render :partial => 'index_item', :collection => @user_relationships, :as => :user_relationship %>
      </tbody>
    </table>

    <div id="inline-form"></div>

    <%= link_to 'New User Relationship', new_user_relationship_path, { remote: true, class: 'btn btn-default', id:'add-item-button' } %>
  </div>
</div>
