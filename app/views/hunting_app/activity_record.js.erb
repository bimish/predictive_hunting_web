<% if @animal_activity_observation.errors.size == 0 %>
Scripts.Page.AnimalActivity.flashSuccess();
Scripts.Page.AnimalActivity.resetForm();
<% else %>
Scripts.Page.AnimalActivity.showValidationErrors(
  [
  <% @animal_activity_observation.errors.full_messages.each_with_index do |message, index| %>
    <%= (index > 0) ? ',' : nil %>'<%= j message %>'
  <% end %>
  ]
);
<% end %>
