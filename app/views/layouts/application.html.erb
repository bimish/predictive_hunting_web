<!DOCTYPE html>
<html>
<head>
  <title><%= full_page_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=drawing" %>
  <%= javascript_include_tag "http://google-maps-utility-library-v3.googlecode.com/svn/trunk/infobox/src/infobox.js" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, user-scalable=no">
  <%= yield :head %>
</head>
<body data-no-turbolink="true">
  <%= yield :modal_content %>
  <%= render 'layouts/header' %>
  <div class="container">
    <%= render 'layouts/flash_messages' %>
    <%= yield %>
  </div>
</body>
</html>
