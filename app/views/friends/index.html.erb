<% provide(:title, 'Friends List') %>
<% content_for :modal_content do %>
<div id="form-placeholder"></div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <span style="display:inline-block; vertical-align:text-bottom;">
      <span class="h4">Friends List</span>
      &nbsp;&nbsp;
      <%= link_to 'Add', new_friend_path, { id:'add-item-button' } %>
    </span>
  </div>
</div>

<% @user_relationships.in_groups_of(4) do |group| %>
<div class="row">
  <% group.reject { |user_relationship| user_relationship.nil? }.each do |user_relationship| %>
    <div class="col-md-3">
    <%= render :partial => 'index_item', :locals => { :user_relationship => user_relationship } %>
    </div>
  <% end %>
</div>
<% end %>


