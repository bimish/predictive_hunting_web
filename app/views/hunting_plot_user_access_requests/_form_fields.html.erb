<% if form.object.persisted? %>
  <%= _text_field(form, :user_id, 'User', 255, { value: (form.object.user_id.nil?) ? nil : form.object.user.get_display_name, :readonly => true } ) %>
  <%= (form.object.user_invitation_id.nil?) ? '' : 'Pending invitation' %>
<% else %>
  <%= _email_field(form, :invite_email, 'Email Address') %>
<% end %>

  <%#= _text_field(form, :alias, 'Alias', 255) %>
  <%= _text_field(form, :message, 'Message (optional)', 1000) %>
  <%= _check_box_list(form, 'Initial Permissions') do |check_box_list| %>
    <%= check_box_list.add_item(:initial_permissions_can_administrate, 'Administrate', inline: true) %>
    <%= check_box_list.add_item(:initial_permissions_can_manage_locations, 'Manage Locations', inline: true) %>
    <%= check_box_list.add_item(:initial_permissions_can_manage_members, 'Manage Members', inline: true) %>
    <%= check_box_list.add_item(:initial_permissions_can_manage_named_animals, 'Manage Named Animals', inline: true) %>
    <%= check_box_list.add_item(:initial_permissions_can_manage_schedules, 'Manage Schedules', inline: true) %>
  <% end %>
