<h1>Sign in</h1>
<div class="row">
  <div class="col-md-4">
    <%= bootstrap_form_for :session, url: sessions_path do |f| %>
      <%= f.text_field :email, { size: 50 } %>
      <%= f.password_field :password %>
      <%= f.submit "Sign in", class: "btn btn-primary" %>
      <div class="pull-right">New user? <%= link_to "Sign up now!", signup_path, class:'btn btn-default' %></div>
    <% end %>
  </div>
</div>
