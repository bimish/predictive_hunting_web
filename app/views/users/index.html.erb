<% content_for :modal_content do %>
<div id="form-placeholder"></div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h3>Listing Users</h3>

    <table class="table">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Alias</th>
          <th>Email</th>
          <th>Password digest</th>
          <th>Remember token</th>
          <th>Authentication method</th>
          <th>Admin</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id='items-tbody'>
        <%= render :partial => 'index_item', :collection => @users, :as => :user %>
      </tbody>
    </table>

    <div id="inline-form"></div>

    <%= link_to 'New User', new_user_path, { remote: true, class: 'btn btn-default', id:'add-item-button' } %>
  </div>
</div>
