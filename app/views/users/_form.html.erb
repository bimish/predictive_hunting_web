<%= bootstrap_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <%= render :partial => '/shared/activerecord_errors', :locals => { :active_record => @user } %>
  <% end %>
  <%= render :partial => 'form_fields', :locals => { :form => f } %>
  <%= _submit_button(f, @user, 'User') %>
<% end %>
