<% content_for :modal_content do %>
<div id="form-placeholder"></div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <h3>Listing Relationship Requests</h3>

    <table class="table">
      <thead>
        <tr>
          <th>Created by</th>
          <th>Related user</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id='items-tbody'>
        <%= render :partial => 'index_item', :collection => @relationship_requests, :as => :relationship_request %>
      </tbody>
    </table>

    <div id="inline-form"></div>

    <%= link_to 'New Relationship Request', new_relationship_request_path, { remote: true, class: 'btn btn-default', id:'add-item-button' } %>
  </div>
</div>
