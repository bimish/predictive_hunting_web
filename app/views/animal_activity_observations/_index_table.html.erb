<%
# initialize any undefined local variables
attribute_list ||= nil
unless defined?(editable)
  editable = true
end
%>
<table class="table">
  <thead>
    <tr>
      <% if (!attribute_list.nil? && attribute_list.include?(:hunting_plot_id)) %>
        <th>Hunting plot</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:hunting_location_id)) %>
        <th>Hunting location</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:location_coordinates)) %>
        <th>Location coordinates</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:animal_category_id)) %>
        <th>Animal category</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:animal_count)) %>
        <th>Animal count</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:animal_activity_type_id)) %>
        <th>Animal activity type</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:hunting_plot_named_animal_id)) %>
        <th>Hunting plot named animal</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:observation_date_time)) %>
        <th>Observation date time</th>
      <% end %>
      <% if (attribute_list.nil? || attribute_list.include?(:created_by_id)) %>
        <th>Created by</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='items-tbody'>
    <%= render :partial => 'animal_activity_observations/index_item', :collection => animal_activity_observations, :as => :animal_activity_observation, locals: { attribute_list: attribute_list, editable: editable } %>
  </tbody>
</table>
