$("#inline-form").html("<%= escape_javascript(render 'delete') %>");
$("#delete-confirm").dialog(
  {
    resizable: false,
    height: 140,
    modal: true,
    autoOpen: true,
    buttons: {
      Ok: function() {
        $(this).dialog("close");
        $.ajax('<%= j animal_activity_observation_path(@animal_activity_observation)%>', { type: 'DELETE' } ).done(
          function(data, textStatus, jqXHR) {
            alert('success!');
            $("#inline-form").empty();
            $('#animal_activity_observation_<%=@animal_activity_observation.id%>').remove();
          }
        );
      },
      Cancel: function() {
        $(this).dialog("close");
        cancelInlineForm();
      }
    }
  }
);

