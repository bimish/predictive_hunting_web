<div class="row">
  <div class="col-md-12">

    <p>
      <strong>Created by:</strong>
      <%= (@user_post.created_by_id.nil?) ? nil : @user_post.user.get_display_name %>
    </p>
    <p>
      <strong>Post content:</strong>
      <%= @user_post.post_content %>
    </p>
    <p>
      <strong>Visibility:</strong>
      <%= EnumsHelper::UserPostEnums::get_visibility_description(@user_post.visibility) %>
    </p>

    <%= link_to 'Edit', edit_user_post_path(@user_post) %> |
    <%= link_to 'Back', user_posts_path %>

  </div>
</div>
