<%
  page_title = "Listing Hunting Plots"
  provide(:title, page_title)
%>
<div class="row">

  <div class="col-md-12">

    <h3><%= page_title%></h3>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @hunting_plots.each do |hunting_plot| %>
          <tr>
            <td><%= hunting_plot.name %></td>
            <td><%= hunting_plot.location_address %></td>
            <td>
              <%= item_show_command hunting_plot %>
              <%= item_edit_command edit_hunting_plot_path(hunting_plot) %>
              <%= item_delete_command hunting_plot, { method: :delete , data: { confirm: 'Are you sure?' } } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Hunting plot', new_hunting_plot_path, class:'btn btn-default' %>

  </div>

</div>
