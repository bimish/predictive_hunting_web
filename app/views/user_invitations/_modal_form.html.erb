<% provide(:title, 'User Invitation') %>
<%= bootstrap_form_for @user_invitation, remote: true do |f| %>
  <% if @user_invitation.errors.any? %>
    <%= render :partial => '/shared/activerecord_errors', :locals => { :active_record => @user_invitation } %>
  <% end %>
  <%= render :partial => 'form_fields', :locals => { :form => f } %>
<% end %>
