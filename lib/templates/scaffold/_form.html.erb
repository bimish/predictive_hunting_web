<%%= bootstrap_form_for(@<%= singular_table_name %>) do |f| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
    <%%= render :partial => '/shared/activerecord_errors', :locals => { :active_record => @<%= singular_table_name %> } %>
  <%% end %>
  <%%= render :partial => 'form_fields', :locals => { :form => f } %>
  <%%= _submit_button(f, @<%= singular_table_name %>) %>
<%% end %>
